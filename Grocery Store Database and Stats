-- create a superstore database

CREATE TABLE goods (id INTEGER PRIMARY KEY, name TEXT, quantity INTEGER, price INTEGER);
INSERT INTO goods VALUES (1, "bike", 2, 200);
INSERT INTO goods VALUES (2, "Tshirt", 5, 15);
INSERT INTO goods VALUES (3, "Soda", 4, 2);
INSERT INTO goods VALUES (4, "Shoes", 3, 15);
INSERT INTO goods VALUES (5, "Jeans", 4, 100);

-- display the database ordered by price
SELECT * FROM goods ORDER BY quantity;
SELECT * FROM goods ORDER BY price;

-- what are the most 2 popular items? 
SELECT item, price, popularity
FROM store
order by popularity desc
limit 5; 
